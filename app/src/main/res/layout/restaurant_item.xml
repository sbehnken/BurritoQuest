<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Restaurant Name"
            android:textSize="25sp"
            android:textColor="#673AB7"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Burrito Ave"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp"
            android:layout_alignParentLeft="true">
        </TextView>

        <TextView
            android:id="@+id/price_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="15sp"
            android:layout_marginTop="49dp">
        </TextView>

         <ImageView
            android:id="@+id/button_image"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignStart="@+id/price_rating"
            android:layout_alignLeft="@+id/price_rating"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_gray_circular_dot" />

        <TextView
            android:id="@+id/user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="49dp"
            android:layout_marginLeft="50dp">
        </TextView>

        <ImageButton
            android:id="@+id/arrow_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:src="@mipmap/arrow_forward">
        </ImageButton>

        </RelativeLayout>

</android.support.v7.widget.CardView>

