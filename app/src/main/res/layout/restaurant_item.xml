<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxEms="10"
            android:text="Restaurant Name"
            android:textColor="#673AB7"
            android:textSize="28sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="26dp"
            android:paddingTop="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxEms="13"
            android:text="123 Burrito Ave"
            android:textSize="18sp"
            android:textStyle="bold">
        </TextView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/price_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="Price: $$"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:id="@+id/button_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                app:layout_constraintStart_toEndOf="@id/price_rating"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_gray_circular_dot" />

            <TextView
                android:id="@+id/user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/button_image"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="10dp"
                android:text="4.5"
                android:textSize="15sp">
            </TextView>

        </android.support.constraint.ConstraintLayout>

        <ImageButton
            android:id="@+id/arrow_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:src="@mipmap/arrow_forward">
        </ImageButton>


    </RelativeLayout>

</android.support.v7.widget.CardView>

